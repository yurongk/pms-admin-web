<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yurongku.mapper.DeptMapper">

    <!-- 查询部门树 -->
    <select id="selectAllDepts" resultType="com.bvision.dept.domain.Dept">
        SELECT *
        FROM sys_dept
        ORDER BY sort_order ASC
    </select>

</mapper>
